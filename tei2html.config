<tei2html.config>

    <pg.compliant>false</pg.compliant>

    <xref.show>always</xref.show>
    <xref.table>false</xref.table>

    <images.scale>0.5</images.scale>
    <images.maxSize>256</images.maxSize>
    <images.maxWidth>720</images.maxWidth>
    <images.maxHeight>720</images.maxHeight>

    <facsimile.enable>false</facsimile.enable>
    <facsimile.wrapper.enable>false</facsimile.wrapper.enable>
    <facsimile.target>_blank</facsimile.target>
    <output format="epub">
        <facsimile.enable>false</facsimile.enable>
    </output>
</tei2html.config>
